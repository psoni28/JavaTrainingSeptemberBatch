package condionalpack;

public class ConditionalStatementDemo {

	public static boolean isNumberEven(int num) {

		boolean result = false;
		if (num % 2 == 0) {

			result = true;
		} else {
			result = false;
		}

		return result;
	}

	public static void main(String[] args) {

		boolean res=isNumberEven(21);
	}

}
